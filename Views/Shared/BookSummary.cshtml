@model Book 


<div class="card card-outline-dark m-1 p-1">
    <div class="bg-dark p-1 text-white">
        <h4>Title: @Model.Title</h4>
        <p>Author Name: @Model.AuthorFirst @Model.AuthorLast</p>
        <p># of Pages: @Model.Pages</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classification: @Model.Classification</p>
        <p>Category: @Model.Category</p>
        <span class="badge badge-pill badge-light justify-content-center">
            <p>Price: $@Model.Price</p>
        </span>
    </div>
    <form id="@Model.BookId" asp-page="/Cart" method="post" class="bg-dark p-1 text-white">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="retrunUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn-light btn-sm text-center">Add to Cart</button>

        </span>
    </form>
</div>
