<!--Acts as the shared layout for the site. Uses bootstrap to style, and renders the body in the RenderBody() tag-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="overflow-x:hidden;">
    <header>
        <nav class="navbar navbar-light navbar-dark bg-dark">
            <!--First time using navbar-brand bootstrap-->
            <span class="navbar-brand ml-2">Online Books</span>
            <ul class="navbar-nav mr-auto d-flex flex-row bd-highlight">
                <li class="navbar-item p-2 pl-4 bd-highlight"><a class="nav-link" asp-action="Index">Home</a></li>
            </ul>
        </nav>
    </header>
    <div class="row text-center mt-xl-5 mb-2">
        <div class="col-1"></div>

        <div class="text-center text-dark col-3">
            <h1>Online Book Store</h1>

            <!--Adds in the ViewComponent-->
            <vc:navigation-menu />
        </div>
        <div class="col-7">
            @RenderBody()
        </div>

        <div class="col-1"> </div>
    </div>
    


    <footer class="text-center footer bg-dark text-light p-4">Cameron Keetch &#169 2021</footer>
</body>
</html>
